<a href="{{ url }}" class="group block h-full flex flex-col overflow-hidden rounded-2xl bg-primary-900 border border-white/10 hover:border-accent-main/50 transition-all" target="_blank" rel="noopener noreferrer nofollow">
  {% if image %}
    <div class="overflow-hidden [&_img]:min-w-full">
      {{ image|raw }}
    </div>
  {% endif %}

  <div class="p-6 flex-1 flex flex-col">
    {% if title %}
      <h3 class="text-xl font-bold text-white mb-2 group-hover:text-accent-main transition-colors">
        {{ title }}
      </h3>
    {% endif %}

    {% if technologies %}
      <p class="text-slate-400 text-sm mb-4">
        {{ technologies }}
      </p>
    {% endif %}

    {% if description %}
      <p class="text-slate-500 text-sm leading-relaxed line-clamp-3">
        {{ description }}
      </p>
    {% endif %}
  </div>
</a>
