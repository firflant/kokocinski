<header class="bg-primary-900 border-b border-primary-800">
  <div class="{{ container_class|default('max-w-7xl') }} mx-auto px-4 sm:px-6 lg:px-8 pt-8 md:pt-12 pb-4 md:pb-6">
    {% if date_iso and date_formatted %}
      <time datetime="{{ date_iso }}" class="text-slate-400 text-sm mb-3 block">
        {{ date_formatted }}
      </time>
    {% endif %}
    {{ content }}
  </div>
</header>
