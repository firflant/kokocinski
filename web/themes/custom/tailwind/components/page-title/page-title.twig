<header class="bg-primary-900 border-b border-primary-800">
  {% set container_class = container|default('normal') == 'narrow' ? 'max-w-4xl' : 'max-w-7xl' %}
  <div class="{{ container_class }} mx-auto px-4 sm:px-6 lg:px-8 pt-8 md:pt-12 pb-4 md:pb-6">
    {% if meta %}
      <span class="text-slate-400 text-sm mb-3 block">{{ meta }}</span>
    {% endif %}
    {% if title %}
    <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight mb-6">{{ title }}</h2>
    {% endif %}
  </div>
</header>
