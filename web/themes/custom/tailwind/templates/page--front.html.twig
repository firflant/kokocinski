{#
/**
 * @file
 * Theme override for the front page (homepage).
 */
#}

{% set container_class = node ? 'max-w-4xl' : 'max-w-7xl' %}

{# Content region will contain the custom blocks placed via module #}
<main id="main-content" role="main">
  {# Status messages #}
  <div class="{{ container_class }} mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    {% if messages %}
        {{ messages }}
    {% endif %}
  </div>

  {# Navbar - positioned at top #}
  {{ include('tailwind:navbar') }}

  {# Hero Header #}
  {{ include('tailwind:hero-header') }}

  {# About Services #}
  {{ include('tailwind:about-services') }}

  {# Tailored Solutions #}
  {{ include('tailwind:tailored-solutions') }}

  {{ page.content }}

  {# Contact #}
  {{ include('tailwind:contact') }}

  {# Footer region #}
  {% if page.footer %}
    {{ page.footer }}
  {% endif %}

  {# Footer #}
  {% include('@tailwind/footer.html.twig') %}
</main>
